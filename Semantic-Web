/* CSS */

body 
{
    box-shadow: -4px 3px 10px 5px #000;
    text-shadow: 1px 1px 1px #333;
    background-color: gray;
    padding: 10px 230px 10px 230px;
}

section
{
  color: white;
    border: 1px solid gray;
    box-shadow: -4px 3px 10px 5px #000;
    overflow: hidden;
    background-color: Red;
}

header
{
    border: 1px solid gray;
    box-shadow: -4px 3px 10px 5px #000;
    text-align: center;
    background-color: #000;
    border-radius: 10px 10px 0px 0px;
    overflow: hidden; 
}

h1
{
	font-size:4em;
	font-family: verdana;
    color: azure;
    margin-left: auto;
    margin-right: auto;
}

nav li
{
	font-size: 2.5em;
	float: left;
	padding: 15px;
	list-style-type: none;
}

footer
{
    border: 1px solid gray;
    box-shadow: -4px 3px 10px 5px #000;
    text-align: center;
    color: White;
    background-color: Black;
    border-radius: 0px 0px 10px 10px;
    overflow: hidden
}


