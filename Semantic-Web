<!-- HTML -->

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Stoyan Stoyanov">
        <title>Homework by Design 1</title>
        <link rel="stylesheet" href="Design-1-Style.css">
    </head>
    <body>
        <header>
            <img src="#" alt="Logo" height="100" width="200">
            <h1>Welcome to Our Website</h1>
            <nav>
                <ol>
                    <li><a>Nav Item 1</a></li>
                    <li><a>Nav Item 2</a></li>
                    <li><a>Nav Item 3</a></li>
                    <li><a>Nav Item 4</a></li>
                </ol>
             </nav>
        </header>
        <article>
            <table border="1">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td>Georgi</td>
                        <td>Georgiev</td>
                        <td>4.54</td>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>Doncho</td>
                        <td>Minkov</td>
                        <td>4.54</td>
                    </tr>
                    <tr>
                        <td>Svetlin</td>
                        <td>Nakov</td>
                        <td>4.31</td>
                    </tr>
                </tbody>
            </table>
        </article>
    </body>
</html>


