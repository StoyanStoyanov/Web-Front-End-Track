<!-- HTML -->

<!DOCTYPE html>
<html lang="en">
  <head>
		<meta charset="UTF-8">
		<title>Nested Items</title>
		<meta name="viewport" content="width=device-width, initial scale=1">
		<meta name="keywords" content="html,css">
		<meta name="author" content="Stoyan Stoyanov">
	    <link rel="stylesheet" href="styles/style.css" type="text/css">
	</head>

	<body>
		<section>
			<h1>
				Preceding Text
			</h1>
			<ol type="I">
				<li>
					List Item 1
					<ol type="a">
						<li>Nested Item 1.1</li>
						<li>Nested Item 2.2</li>
					</ol>
				</li>
				<li>
					List Item 2
					<ol>
						<li>Nested Item 2.1</li>
						<li>
							Nested Item 2.2
							<ul id="circle">
								<li>
									Nested Item 2.2.1
								</li>
								<li>
									Nested Item 2.2.2
									<ul>
										<li>
											Nested Item 2.2.2.1
										</li>
										<li>
											Nested Item 2.2.2.2
										</li>
									</ul>
								</li>
								<li>
									Nested Item 2.2.3
								</li>
							</ul>
						</li>
						<li>
							Nested item 2.3
						</li>
					</ol>
				</li>
				<li>
					List Item 3
					<ul id="disc">
						<li>
							Nested Item 3.1
						</li>
						<li>
							Nested Item 3.2
						</li>
						<li>
							Nested Item 3.3
						</li>
					</ul>
				</li>
			</ol>
		</section>
	</body>
</html>

/* Optional CSS */

