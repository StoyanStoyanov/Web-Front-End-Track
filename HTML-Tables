<!-- EXERCISE 02.Registration Form -->

<!-- HTML -->

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Signup Form</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="">
        <link rel="stylesheet" href="Style.css" type="text/css">
    </head>
    <body>
        <form method="get" action="http://google.com" name="">
            <fieldset>
                <legend>Registration Form</legend>
                <label for="membername">
                    Member name:
                </label>
                <input type="text" name="s" id="membername" required="required" autofocus="autofocus">
                <strong>
                    <label for="membername">
                        *req
                    </label>
                </strong>
                <br>
                <label for="email">
                    Email:
                </label>
                <input type="text" id="email" required="required" placeholder="user@domain.com">
                <strong>
                    <label for="email">
                        *req
                    </label>
                </strong>
                <br>
                <label for="school">
                    School:
                </label>
                <input type="text" id="school" required="required">
                <strong>
                    <label for="school">
                        *req
                    </label>
                </strong>
                <br>
                <input type="submit" id="submit" value="Submit">
            </fieldset>
        </form>
    </body>
</html>

/* CSS */

#submit
{
   background-color: #4cff00;
   border-color:#0ff;
}

fieldset 
{
    width: 300px;
}

