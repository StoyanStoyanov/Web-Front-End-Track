<!-- EXERCISE 03. Create a Calculator-like Table -->

<!-- HTML -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <title>Calculator</title>
        <meta name="keywords" content="calculator,calculations,mathematics"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="author" content="Stoyan Stoyanov"/>
        <link rel="stylesheet" href="Calculator-style.css" type="text/css"/>
    </head>

    <body>
        <form>
            <fieldset>
                <legend>Calculator</legend>
                <table border="1">
                    <thead>
                        <tr>
                            <th colspan="4">
                                <input type="text" id="head" value="0"/>
                            </th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <td colspan="4"><input type="submit" id="foot" value="="/></td>
                        </tr>
                    </tfoot>

                    <tbody>
                        <tr>
                            <td><input type="button" value="1"/></td>
                            <td><input type="button" value="2"/></td>
                            <td><input type="button" value="3"/></td>
                            <td><input type="button" value="+"/></td>
                        </tr>
                        <tr>
                            <td><input type="button" value="4"/></td>
                            <td><input type="button" value="5"/></td>
                            <td><input type="button" value="6"/></td>
                            <td><input type="button" value="-"/></td>
                        </tr>
                        <tr>
                            <td><input type="button" value="7"/></td>
                            <td><input type="button" value="8"/></td>
                            <td><input type="button" value="9"/></td>
                            <td><input type="button" value="*"/></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input type="button" id="double" value="0"/></td>
                            <td><input type="button" value="."/></td>
                            <td><input type="button" value="/"/></td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </form>  
    </body>
</html>

/* CSS */

fieldset 
{
    background-color: aliceblue;
    border-width: 5px;
    border-color: #0ff;
    width: 242px;
    height: 375px
}
legend 
{
    font-size: 25px;
    font-style:oblique
}
table
{
    padding: 5px;
    background-color: lightblue;
    border-width: 4px; 
    border-spacing: 0;
    border-color: #0ff  
}

td, th, input 
{
    width: 51px;
    height: 50px
}
#head 
{
    width: 210px;
    height: 45px;
    font-size: 25px;
    text-align: right
}

#foot 
{
    width:216px
}

#double 
{
    width: 106px
}

